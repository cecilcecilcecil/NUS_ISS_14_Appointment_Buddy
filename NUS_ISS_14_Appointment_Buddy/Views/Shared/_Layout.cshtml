    <script src="~/lib/jquery-nice-select-1.1.0/js/jquery.nice-select.min.js" nonce="@ViewData["Nonce"]"></script>
    <script src="~/lib/bootstrap-4.3.1-dist/js/popper.min.js" nonce="@ViewData["Nonce"]"></script>
