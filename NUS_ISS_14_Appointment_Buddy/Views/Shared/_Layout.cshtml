@using NUS_ISS_14_Appointment_Buddy.Helper
@using AppointmentBuddy.Core.Common.Helper
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NUS_ISS_14_Appointment_Buddy</title>
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">

    <link rel="stylesheet" href="~/css/combined.css" asp-append-version="true">

    <script src="~/js/combined.js" nonce="@ViewData["Nonce"]" asp-append-version="true"></script>

    @RenderSection("styles", false)
    @RenderSection("MetaTags", false)
</head>
<body id="content" style="font-size: 16px">
    <header>
        @if (IdentityHelper.HasRole((ClaimsIdentity)User.Identity, Constants.RoleType.Admin)
           || IdentityHelper.HasRole((ClaimsIdentity)User.Identity, Constants.RoleType.Staff))
        {
            <partial name="_AdminHeader" />
        }
        else if (IdentityHelper.HasRole((ClaimsIdentity)User.Identity, Constants.RoleType.Patient))
        {
            <partial name="_Header" />
        }
        else
        {
            <partial name="_DefaultHeader" />
        }
    </header>
    <div class="_page-wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer">
        <partial name="_Footer" />
    </footer>
</body>
</html>
