    <link rel="stylesheet" href="~/lib/jquery-flexdatalist-2.2.4/jquery.flexdatalist.css">
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="~/js/vendor/modernizr-3.6.0.min.js" nonce="@ViewData["Nonce"]"></script>
    <script src="~/lib/jquery/dist/jquery.js" nonce="@ViewData["Nonce"]"></script>
    <script src="~/js/vendor/jquery-3.4.1.min.js" nonce="@ViewData["Nonce"]"></script>
    <script src="~/js/webcomponentsjs/webcomponents-bundle.js" nonce="@ViewData["Nonce"]"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" nonce="@ViewData["Nonce"]"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js" nonce="@ViewData["Nonce"]"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" nonce="@ViewData["Nonce"]"></script>
    <script src="~/lib/mcustomscrollbar/jquery.mCustomScrollbar.js" nonce="@ViewData["Nonce"]"></script>

    <script src="~/js/vendor/jquery-ui-1.12.1/jquery-ui.min.js" nonce="@ViewData["Nonce"]"></script>
    <script src="~/js/vendor/slick.min.js" nonce="@ViewData["Nonce"]"></script>
