    <script src="~/js/pluginsMap.js" nonce="@ViewData["Nonce"]"></script>
    <script src="~/js/main.js" asp-append-version="true" nonce="@ViewData["Nonce"]"></script>
    <script src="~/js/site.js" nonce="@ViewData["Nonce"]"></script>
    <script src="~/js/download.js" nonce="@ViewData["Nonce"]"></script>
    <script type="text/javascript" src="~/js/validation.js" nonce="@ViewData["Nonce"]"></script>

    @RenderSection("styles", false)
    @RenderSection("MetaTags", false)
</head>
<body id="content" style="font-size: 16px">
    <header>
        @if (IdentityHelper.HasRole((ClaimsIdentity)User.Identity, Constants.RoleType.Admin)
           || IdentityHelper.HasRole((ClaimsIdentity)User.Identity, Constants.RoleType.Staff))
        {
            <partial name="_AdminHeader" />
        }
        else if (IdentityHelper.HasRole((ClaimsIdentity)User.Identity, Constants.RoleType.Patient))
        {
            <partial name="_Header" />
        }
        else
        {
            <partial name="_DefaultHeader" />
        }
    </header>
    <div class="_page-wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer">
        <partial name="_Footer" />
    </footer>
</body>
</html>
