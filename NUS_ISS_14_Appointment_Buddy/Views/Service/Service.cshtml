@using AppointmentBuddy.Core.Model
@model IEnumerable<Services>

<h2 align ="center">All Services</h2>
<form method="post">
    <div class="input-group mb-5">
        <div class="autosave-container">
            <div class="autosave-wrapper">
                <label for="id">Get Service by Description:</label><input class="input-group-text" name="Description" />&nbsp;&nbsp;<button type="submit" class="btn btn-sm btn-primary">Submit</button>
            </div>
         </div>
    </div>
</form>

@if (Model != null)
{
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Service Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                @if (r.IsDeleted == false)
                {
            <tr>
                <td>@r.Id</td>
                <td>@r.Description</td>
                <td>
                    <a asp-action="UpdateService" asp-route-description="@r.Description">
                        <img src="/icon/edit.png" />
                    </a>
                </td>
                <td>
                    <form asp-action="DeleteService" method="post">
                        <input type="hidden" value="@r.Description" name="ServiceName" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
                }
            }
        </tbody>
    </table>
}
<div class="form-group" align="center">
    <a asp-action="AddService" class="btn btn-sm btn-primary">Add Service</a>
</div>
