@using AppointmentBuddy.Core.Model
@model IEnumerable<Services>

<h2>All Services</h2>
<form method="post">
    <div class="form-group">
        <label for="id">Get Service by ID:</label><input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Submit</button>
    </div>
</form>

@if (Model != null)
{
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Service Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                @if (r.IsDeleted == false)
                {
                    <tr>
                        <td>@r.Id</td>
                        <td>@r.Description</td>
                        <td>
                            <a asp-action="UpdateService" asp-route-id="@r.Id">
                                <img src="/icon/edit.png" />
                            </a>
                        </td>
                        <td>
                            <form asp-action="DeleteService" method="post">
                                <input type="hidden" value="@r.Id" name="SpecialistId" />
                                <input type="image" src="/icon/close.png" />
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
<div class="form-group" align="center">
    <a asp-action="AddService" class="btn btn-sm btn-primary">Add Service</a>
</div>
