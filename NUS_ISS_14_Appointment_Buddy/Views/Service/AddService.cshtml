@using AppointmentBuddy.Core.Model
@model IEnumerable<Services>

<h2 align="center">Update Services</h2>
<form asp-action="AddService" method="post">
    <div align="center">
        <div class="col-md-4">
            <label for="Name">Service Description:</label>
            <input class="input-group-text" name="Description" />
        </div>
        <br><br>
            <div class="col-md-4">
                <div class="autosave-container">
                    <div class="autosave-wrapper">
                        <button type="submit" class="btn btn-sm btn-primary">Add</button>&nbsp;&nbsp;<a asp-action="Index" class="btn btn-sm btn-secondary">Back</a>
                    </div>
                </div>
            </div>
    </div>
</form>

@if (Model != null)
{
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Service Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                @if (r.IsDeleted == false)
                {
                    <tr>
                        <td>@r.Id</td>
                        <td>@r.Description</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}