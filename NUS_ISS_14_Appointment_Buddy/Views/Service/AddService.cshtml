@using AppointmentBuddy.Core.Model
@model IEnumerable<Services>

<h2>Update Services</h2>
<form asp-action="AddService" method="post">
    <div class="form-group">
        <label for="Name">Service Description:</label>
        <input class="form-control" name="Description" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>   <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a>
    </div>
</form>

@if (Model != null)
{
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Service Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                @if (r.IsDeleted == false)
                {
                    <tr>
                        <td>@r.Id</td>
                        <td>@r.Description</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}