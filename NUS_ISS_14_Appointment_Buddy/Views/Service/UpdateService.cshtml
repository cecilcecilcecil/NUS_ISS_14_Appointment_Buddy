@using AppointmentBuddy.Core.Model
@model IEnumerable<Services>

<h2 align="center">Update Services</h2>
<form asp-action="UpdateService" method="post">
    <div align="center">
        <div class="col-md-4">
            <label for="Name">Old Service Description:</label>
            @foreach (var r in Model)
            {
                <label for="Name">@r.Description</label>
                <input type="hidden" value="@r.Id" name="Id" />
            }
        </div>
        <div class="col-md-4">
            <label for="Name">New Service Description:</label>
            <input class="input-group-text" name="Description" />
        </div>
        <br><br>
            <div class="col-md-4">
                <div class="autosave-container">
                    <div class="autosave-wrapper">
                        <button type="submit" class="btn btn-sm btn-primary">Update</button>&nbsp;&nbsp;<a asp-action="Index" class="btn btn-sm btn-secondary">Back</a>
                    </div>
                </div>
            </div>
    </div>
</form>