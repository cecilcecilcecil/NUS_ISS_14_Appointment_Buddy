@using AppointmentBuddy.Core.Model
@model CollectionDataModel

<h2>Update Specialist Detail</h2>
<form asp-action="UpdateSpecialist" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        @Html.TextBoxFor(x => x.modelSpec.Name)
    </div>
    <div class="form-group">
        <label for="Name">NRIC:</label>
        @Html.TextBoxFor(x => x.modelSpec.NRIC)
    </div>
    <div class="form-group">
        <label for="Name">Contact:</label>
        @Html.TextBoxFor(x => x.modelSpec.Contact)
    </div>
    <div class="form-group">
        <label for="Name">Available:</label>
        @Html.DropDownListFor(x => x.modelSpec.Available, new SelectList(Model.Available, "Value", "Text"))
    </div>
    <div class="form-group">
        <label for="Name">Services:</label>
        @Html.DropDownListFor(x => x.modelSpec.Services, new SelectList(Model.Service, "Id", "Description"))
        @Html.HiddenFor(m => m.Service)
    </div>
    <div class="form-group">
        <label for="Name">Address:</label>
        @Html.TextBoxFor(x => x.modelSpec.Address)
    </div>
    <div class="form-group">
        <label for="Name">Email:</label>
        @Html.TextBoxFor(x => x.modelSpec.Email)
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>   <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a>
    </div>
</form>

@if (Model.modelSpec != null)
{
    <h2>Specialist</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Name</th>
                <th>NRIC</th>
                <th>Contact</th>
                <th>Available</th>
                <th>Address</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.modelSpec.Name</td>
                <td>@Model.modelSpec.NRIC</td>
                <td>@Model.modelSpec.Contact</td>
                @if (@Model.modelSpec.Available == true)
                {
                    <td>Yes</td>
                }
                else
                {
                    <td>No</td>
                }
                <td>@Model.modelSpec.Address</td>
                <td>@Model.modelSpec.Email</td>
            </tr>
        </tbody>
    </table>
}