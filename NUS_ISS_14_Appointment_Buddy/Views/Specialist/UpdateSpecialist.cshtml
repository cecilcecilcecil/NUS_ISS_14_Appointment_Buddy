@using AppointmentBuddy.Core.Model
@model CollectionDataModel

<h2>Update Specialist Detail</h2>
<form asp-action="UpdateSpecialistDetail" method="post">
 @foreach (var r in Model.Specialist)
 {
    <div class="form-group">
        <label for="Name">Name:</label>
        @Html.TextBox(Html.NameFor(p => p.modelSpec.Name).ToString(), r.Name)
    </div>
    <div class="form-group">
        <label for="Name">NRIC:</label>
        @Html.TextBox(Html.NameFor(p => p.modelSpec.NRIC).ToString(), r.NRIC)
    </div>
    <div class="form-group">
        <label for="Name">Contact:</label>
        @Html.TextBox(Html.NameFor(p => p.modelSpec.Contact).ToString(), r.Contact)
    </div>
    <div class="form-group">
        <label for="Name">Available:</label>
        @Html.DropDownListFor(x => x.modelSpec.Available, new SelectList(Model.Available, "Value", "Text"))
    </div>
    <div class="form-group">
        <label for="Name">Services:</label>
        @Html.DropDownListFor(x => x.modelSpec.Services, new SelectList(Model.Service, "Id", "Description"))
        @Html.HiddenFor(m => m.Service)
    </div>
    <div class="form-group">
        <label for="Name">Address:</label>
        @Html.TextBox(Html.NameFor(p => p.modelSpec.Address).ToString(), r.Address)
    </div>
    <div class="form-group">
        <label for="Name">Email:</label>
        @Html.TextBox(Html.NameFor(p => p.modelSpec.Email).ToString(), r.Email)
    </div>
    <div class="text-center panel-body">
        <input type="hidden" value="@r.Id" name="Id" />
        <button type="submit" class="btn btn-sm btn-primary">Update</button>   <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a>
    </div>
}
</form>